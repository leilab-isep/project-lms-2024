pipeline {
    agent any

    stages {
        stage('Clean') {
            steps {
                echo 'Cleaning /target..'
                sh 'mvn clean'
            }
        }
        stage('Unit Tests') {
            steps {
                echo 'Running Unit Tests..'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                sh 'mvn install spring-boot:run -DskipTests'
            }
        }
    }
}
